<p id="notice"><%= notice %></p>


<div class="container" style="background-color: white">
  <h1>Tweets</h1>
  
  <table>
    <thead>
      <tr>
        <th>Message</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.message %></td>
          <td><%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %></td>
          <td style="padding: 5px"><%= link_to 'Show |', tweet %></td>
          <td style="padding: 5px"><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td style="padding: 5px"><%= link_to '| Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Tweet', new_tweet_path %>
</div>